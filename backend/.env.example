# Server
PORT=3001
NODE_ENV=development

# Database - Using local PostgreSQL
DATABASE_URL=postgresql://username@localhost:5432/ridecast

# Redis
REDIS_URL=redis://localhost:6379

# Azure Speech API
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=ridecast-dev
AWS_REGION=us-east-1

# JWT Secrets (generated)
JWT_SECRET=your-jwt-secret-minimum-32-characters-long
JWT_REFRESH_SECRET=your-jwt-refresh-secret-minimum-32-chars

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Amplifier CLI (for compression feature)
# REQUIRED: Full path to Python 3
PYTHON_CMD=/Library/Frameworks/Python.framework/Versions/3.13/bin/python3
# REQUIRED: Path to amplifier toolkit (usually ~/dev/toolkits/amplifier)
AMPLIFIER_PATH=/Users/your-username/dev/toolkits/amplifier
